{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% trans_default_domain 'content_list' %}

{% form_theme form_counts_content_of_content_type '@EzPlatformAdminUi/form_fields.html.twig'  %}

{% block body_class %}ez-info-view{% endblock %}

{% block breadcrumbs %}
    {% include '@EzPlatformAdminUi/parts/breadcrumbs.html.twig' with { items: [
        { value: 'breadcrumb.content'|trans(domain='messages')|desc('Content') , },
        { url: path('ezsystems.custompage.menu'), value: 'CustomPage' },
    ]} %}
{% endblock %}

{% block page_title %}
    {% include '@EzPlatformAdminUi/parts/page_title.html.twig' with {
        title: 'This is our custom page !',
        iconName: 'browse'
    } %}
{% endblock %}

{% block content %}

<section class="container mt-4">
   {{ form_start(form_counts_content_of_content_type, { 'action': path('ezsystems.custompage.menu') }) }}
       <div class="input-group">
           {{ form_widget(form_counts_content_of_content_type.content_type) }}
           <span class="input-group-btn">
               <button type="submit" class="btn btn-primary">
               <svg class="ez-icon ez-icon-search-button">
                   <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#search"></use>
               </svg>
               {{ 'search.perform'|trans|desc('Count !') }}</button>
           </span>
       </div>
       <br />

   {{ form_end(form_counts_content_of_content_type) }}

   {% if resultCount is defined %}

    There are {{ resultCount }} content(s) of this contentType.
   {% endif %}

</section>

<br />
{% endblock %}
